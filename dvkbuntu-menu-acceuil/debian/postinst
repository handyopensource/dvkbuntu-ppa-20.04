 #!/bin/bash
 
cat << FIN > "/usr/share/applications/DVKBuntuMenuAcceuil.desktop"
[Desktop Entry]
Comment[fr_FR]=Raccourci Sympa à l'ouverture de session
Comment=Raccourci Sympa à l'ouverture de session
Exec=/opt/dvkbuntu-menu-acceuil/DVKBuntuAcceuil
GenericName[fr_FR]=Menu d'Acceuil au Démarrage
GenericName=Menu d'Acceuil au Démarrage
Icon=Logo.svg
MimeType=
Name[fr_FR]=DVKBuntu Menu Acceuil
Name=DVKBuntu Menu Acceuil
NoDisplay=false
Path=
Categories=Utility;
StartupNotify=true
Terminal=false
TerminalOptions=
Type=Application
X-DBUS-ServiceName=
X-DBUS-StartupType=
X-KDE-SubstituteUID=false
X-KDE-Username=
FIN

cat << FIN > "/etc/skel/.config/DVKBuntuMenuAcceuil.desktop"
[Desktop Entry]
Exec=/opt/dvkbuntu-menu-acceuil/DVKBuntuAcceuil
GenericName[fr_FR]=Menu d'Acceuil au Démarrage
GenericName=Menu d'Acceuil au Démarrage
Icon=Logo.svg
MimeType=
Name[fr_FR]=DVKBuntu Menu Acceuil
Name=DVKBuntu Menu Acceuil
NoDisplay=false
Path=
Categories=Utility;
StartupNotify=true
Terminal=false
TerminalOptions=
Type=Application
X-DBUS-ServiceName=
X-DBUS-StartupType=
X-KDE-SubstituteUID=false
X-KDE-Username=
FIN

cat << FIN > "/etc/xdg/autostart/DVKBuntuMenuAcceuil.desktop"
[Desktop Entry]
Comment[fr_FR]=Raccourci Sympa à l'ouverture de session
Comment=Raccourci Sympa à l'ouverture de session
Exec=/opt/dvkbuntu-menu-acceuil/DVKBuntuAcceuil
GenericName[fr_FR]=Menu d'Acceuil au Démarrage
GenericName=Menu d'Acceuil au Démarrage
Icon=Logo.svg
MimeType=
Name[fr_FR]=DVKBuntu Menu Acceuil
Name=DVKBuntu Menu Acceuil
NoDisplay=false
Path=
Categories=Utility;
StartupNotify=true
Terminal=false
TerminalOptions=
Type=Application
X-DBUS-ServiceName=
X-DBUS-StartupType=
X-KDE-SubstituteUID=false
X-KDE-Username=
FIN

chmod 777 /opt/dvkbuntu-menu-acceuil/ScaleFactor.sh
