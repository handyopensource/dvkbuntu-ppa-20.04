FIN

cat << FIN > "/usr/share/kubuntu-default-settings/kf5-settings/plasmarc"
[Theme]
name=DVKBUNTU
FIN

cat << FIN > "/usr/share/kubuntu-default-settings/settings.ini"
[Settings]
gtk-application-prefer-dark-theme=true
gtk-button-images=0
gtk-cursor-theme-name=breeze_cursors
gtk-fallback-icon-theme=Adwaita
gtk-font-name=Luciole Regular 12
gtk-icon-theme-name=Flat-Remix-Blue-Dark
gtk-menu-images=0
gtk-primary-button-warps-slider=0
gtk-theme-name=DVKBuntu
gtk-toolbar-style=GTK_TOOLBAR_ICONS
FIN


cat << FIN > "/usr/share/kubuntu-default-settings/gtk2-default-theme.rc.sh"
#!/bin/bash

# Make sure our customised gtkrc file is loaded.
export GTK2_RC_FILES=$HOME/.gtkrc-2.0-kde4
FIN

cat << FIN > "/usr/share/kubuntu-default-settings/kf5-settings/kcm-about-distrorc"
